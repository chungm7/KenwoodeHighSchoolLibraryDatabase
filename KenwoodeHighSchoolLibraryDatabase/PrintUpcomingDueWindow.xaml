<Window x:Class="KenwoodeHighSchoolLibraryDatabase.PrintUpcomingDueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KenwoodeHighSchoolLibraryDatabase"
        mc:Ignorable="d"
        Title="PrintUpcomingDueWindow" Height="997.296" Width="1089.194">
    <Grid>
        <DataGrid x:Name="dataGridIssuedBooks" HorizontalAlignment="Left" Height="955" Margin="10,1,0,0" VerticalAlignment="Top" Width="715"
                  FontFamily="Sylfaen">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item ID" IsReadOnly="True" Binding="{Binding firstName, Mode=OneWay}" Width="150"/>
                <DataGridTextColumn Header="Lent To" IsReadOnly="True" Binding="{Binding userID, Mode=OneWay}" Width="150"/>
                <DataGridTextColumn Header="Title" IsReadOnly="True" Binding="{Binding lastName, Mode=OneWay}" Width="200"/>
                <DataGridTextColumn Header="Due Date" IsReadOnly="True" Binding="{Binding userType, Mode=OneWay}" Width="100"/>
                <DataGridTextColumn Header="Days Until Due Date" IsReadOnly="True" Binding="{Binding itemLimit, Mode=OneWay}" Width="115"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
