<Window x:Name="MainWindow1" x:Class="KenwoodeHighSchoolLibraryDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KenwoodeHighSchoolLibraryDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000" ResizeMode="CanMinimize">
    <Grid Background="White" Margin="0,0,-6.4,1">
        <Button x:Name="BtnToRegistrationWindow" Content="Register New User" HorizontalAlignment="Left" VerticalAlignment="Top" Width="106" Margin="164,371,0,0" Click="BtnToRegistrationWindow_Click" Background="#FFD33E3E" FontFamily="Sylfaen"/>
        <Button x:Name="TstBtnDeleteFromAccounts" Content="Delete Accounts Table Data" HorizontalAlignment="Left" Margin="9,371,0,0" VerticalAlignment="Top" Width="150" Height="20" Click="TstBtnDeleteFromAccounts_Click" Background="#FFD33E3E" FontFamily="Sylfaen"/>
        <DataGrid x:Name="dataGridAccounts" 
                  HorizontalAlignment="Left" Height="220" Margin="9,145,0,0" VerticalAlignment="Top" Width="450" 
                  MouseDoubleClick="dataGridAccounts_DoubleClick"
                  FontFamily="Sylfaen">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name" IsReadOnly="True" Binding="{Binding firstName, Mode=OneWay}" Width="*"/>
                <DataGridTextColumn Header="Surname" IsReadOnly="True" Binding="{Binding lastName, Mode=OneWay}" Width="75"/>
                <DataGridTextColumn Header="User ID" IsReadOnly="True" Binding="{Binding userID, Mode=OneWay}" Width="75"/>
                <DataGridTextColumn Header="User Type" IsReadOnly="True" Binding="{Binding userType, Mode=OneWay}" Width="75"/>
                <DataGridTextColumn Header="Book Limit" IsReadOnly="True" Binding="{Binding bookLimit, Mode=OneWay}" Width="75"/>
                <DataGridTextColumn Header="Date Limit" IsReadOnly="True" Binding="{Binding dateLimit, Mode=OneWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="dataGridBooks" 
                  HorizontalAlignment="Left" Height="220" 
                  Margin="10,396,0,0" 
                  VerticalAlignment="Top" 
                  Width="450" 
                  Background="White" FontFamily="Sylfaen">
        </DataGrid>
        <ComboBox x:Name="comboBoxAccountsSearchByOptions" HorizontalAlignment="Left" Margin="120,119,0,0" VerticalAlignment="Top" Width="120" FontFamily="Sylfaen" SelectionChanged="comboBoxAccountsSearchByOptions_SelectionChanged">
            <ListBoxItem Content="First Name"/>
            <ListBoxItem Content="Surname"/>
            <ListBoxItem Content="User ID"/>
        </ComboBox>
        <Label x:Name="labelSearchUser" Content="Search for user by: " HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.442,-1.177" FontFamily="Sylfaen"/>
        <TextBox x:Name="textBoxAccountsSearchBy" HorizontalAlignment="Left" Height="23" Margin="245,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Sylfaen" TextChanged="textBoxAccountsSearchBy_TextChanged" GotFocus="textBoxAccountsSearchBy_GotFocus"/>
        <Image Margin="291,9,268,555.4" Source="logo.png" Stretch="Fill"/>
    </Grid>
</Window>
